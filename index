    <script>
        const correctAnswers = {
            q1: 'a', // HyperText Markup Language
            q2: 'b', // <h1>
            q3: 'false', // <br> doesn't need closing tag
            q4: 'b', // <ol>
            q5: 'false', // Only one <body> allowed
            q6: 'b', // href
            q7: 'false', // <img> doesn't need closing tag
            q8: 'a', // <table>
            q9: 'true', // DOCTYPE is required
            q10: 'b', // <p>
            q11: 'true', // <div> can group elements
            q12: 'b', // src
            q13: 'true', // <strong> makes text bold
            q14: 'a', // <form>
            q15: 'true' // <span> can style text parts
        };

        const explanations = {
            q1: 'HTML تعني HyperText Markup Language وهي لغة ترميز النصوص التشعبية',
            q2: 'عنصر <h1> يُستخدم لإنشاء العنوان الرئيسي الأكبر في الصفحة',
            q3: 'عنصر <br> هو عنصر فارغ (void element) ولا يحتاج إلى وسم إغلاق',
            q4: 'عنصر <ol> يُستخدم لإنشاء قائمة مرقمة (Ordered List)',
            q5: 'يجب أن تحتوي صفحة HTML على عنصر <body> واحد فقط',
            q6: 'خاصية href تُستخدم لتحديد الرابط في عنصر <a>',
            q7: 'عنصر <img> هو عنصر فارغ ولا يحتاج إلى وسم إغلاق',
            q8: 'عنصر <table> يُستخدم لإنشاء الجداول في HTML',
            q9: 'DOCTYPE يخبر المتصفح بنوع وإصدار HTML المستخدم ويجب أن يكون في بداية كل صفحة',
            q10: 'عنصر <p> يُستخدم لإنشاء فقرة نصية',
            q11: 'عنصر <div> يُستخدم كحاوي لتجميع العناصر الأخرى',
            q12: 'خاصية src تُستخدم لتحديد مصدر الصورة في عنصر <img>',
            q13: 'عنصر <strong> يُستخدم لإظهار النص بخط عريض مع إعطاء أهمية دلالية',
            q14: 'عنصر <form> يُستخدم لإنشاء النماذج التفاعلية',
            q15: 'عنصر <span> يُستخدم لتنسيق جزء محدد من النص داخل عنصر آخر'
        };

        let quizSubmitted = false;

        function submitQuiz() {
            if (quizSubmitted) return;
            
            let score = 0;
            const totalQuestions = 15;
            
            // Check answers and show feedback
            for (let i = 1; i <= totalQuestions; i++) {
                const questionName = `q${i}`;
                const selectedAnswer = document.querySelector(`input[name="${questionName}"]:checked`);
                const feedbackDiv = document.querySelector(`#quiz-container .question-card:nth-child(${i}) .answer-feedback`);
                
                if (selectedAnswer) {
                    const isCorrect = selectedAnswer.value === correctAnswers[questionName];
                    if (isCorrect) {
                        score++;
                        feedbackDiv.innerHTML = `
                            <div class="correct-answer text-white p-4 rounded-lg">
                                <div class="flex items-center mb-2">
                                    <span class="text-2xl mr-2">✅</span>
                                    <span class="font-bold">إجابة صحيحة!</span>
                                </div>
                                <p class="text-sm">${explanations[questionName]}</p>
                            </div>
                        `;
                    } else {
                        feedbackDiv.innerHTML = `
                            <div class="incorrect-answer text-white p-4 rounded-lg">
                                <div class="flex items-center mb-2">
                                    <span class="text-2xl mr-2">❌</span>
                                    <span class="font-bold">إجابة خاطئة</span>
                                </div>
                                <p class="text-sm mb-2"><strong>الإجابة الصحيحة:</strong> ${getCorrectAnswerText(questionName)}</p>
                                <p class="text-sm">${explanations[questionName]}</p>
                            </div>
                        `;
                    }
                } else {
                    feedbackDiv.innerHTML = `
                        <div class="neutral-answer border-2 border-yellow-400 text-yellow-800 p-4 rounded-lg">
                            <div class="flex items-center mb-2">
                                <span class="text-2xl mr-2">⚠️</span>
                                <span class="font-bold">لم يتم الإجابة على هذا السؤال</span>
                            </div>
                            <p class="text-sm mb-2"><strong>الإجابة الصحيحة:</strong> ${getCorrectAnswerText(questionName)}</p>
                            <p class="text-sm">${explanations[questionName]}</p>
                        </div>
                    `;
                }
                
                feedbackDiv.classList.remove('hidden');
                feedbackDiv.classList.add('fade-in');
            }
            
            // Show results
            showResults(score, totalQuestions);
            
            // Disable further submissions
            quizSubmitted = true;
            document.getElementById('submit-btn').style.display = 'none';
            document.getElementById('quiz-container').classList.add('quiz-completed');
            
            // Scroll to results
            document.getElementById('results-section').scrollIntoView({ behavior: 'smooth' });
        }

        function getCorrectAnswerText(questionName) {
            const correctValue = correctAnswers[questionName];
            const questionElement = document.querySelector(`input[name="${questionName}"][value="${correctValue}"]`);
            return questionElement ? questionElement.nextElementSibling.textContent : correctValue;
        }

        function showResults(score, total) {
            const percentage = (score / total) * 100;
            const resultsSection = document.getElementById('results-section');
            const finalScore = document.getElementById('final-score');
            const grade = document.getElementById('grade');
            const performanceMessage = document.getElementById('performance-message');
            
            finalScore.textContent = `${score}/${total}`;
            
            let gradeText = '';
            let gradeColor = '';
            let message = '';
            
            if (percentage >= 90) {
                gradeText = 'ممتاز';
                gradeColor = 'text-green-600';
                message = '🎊 تهانينا! لديك معرفة ممتازة بأساسيات HTML';
            } else if (percentage >= 80) {
                gradeText = 'جيد جداً';
                gradeColor = 'text-blue-600';
                message = '👏 أداء رائع! لديك فهم جيد لأساسيات HTML';
            } else if (percentage >= 70) {
                gradeText = 'جيد';
                gradeColor = 'text-yellow-600';
                message = '👍 أداء جيد! راجع بعض المفاهيم وستتحسن أكثر';
            } else if (percentage >= 60) {
                gradeText = 'مقبول';
                gradeColor = 'text-orange-600';
                message = '📚 تحتاج لمراجعة أساسيات HTML أكثر';
            } else {
                gradeText = 'يحتاج تحسين';
                gradeColor = 'text-red-600';
                message = '📖 ننصحك بدراسة أساسيات HTML من جديد';
            }
            
            finalScore.className = `text-6xl font-bold mb-4 ${gradeColor}`;
            grade.innerHTML = `${percentage.toFixed(1)}% - ${gradeText}`;
            grade.className = `text-2xl font-semibold mb-4 ${gradeColor}`;
            performanceMessage.textContent = message;
            
            resultsSection.classList.remove('hidden');
            resultsSection.classList.add('fade-in');
            
            // Update progress bar
            updateProgress(score, total);
        }

        function updateProgress(score, total) {
            const percentage = (score / total) * 100;
            document.getElementById('progress').style.width = percentage + '%';
            document.getElementById('score').textContent = score;
        }

        // Add some interactivity to radio buttons
        document.addEventListener('change', function(e) {
            if (e.target.type === 'radio' && !quizSubmitted) {
                const label = e.target.closest('label');
                const questionCard = label.closest('.question-card');
                
                // Remove previous selections styling
                questionCard.querySelectorAll('label').forEach(l => {
                    l.classList.remove('bg-blue-100', 'border-blue-400');
                });
                
                // Style selected option
                label.classList.add('bg-blue-100', 'border-blue-400');
            }
        });
    </script>
